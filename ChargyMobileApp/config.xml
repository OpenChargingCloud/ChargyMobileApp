<?xml version='1.0' encoding='utf-8'?>
<widget id="cloud.charging.open.apps.mobile" version="0.3.0" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>ChargyMobileApp</name>
    <description>
        Chargy - Transparenzsoftware für die Elektromobilität
    </description>
    <author email="achim.friedland@graphdefined.com" href="https://graphdefined.com">
        Achim Friedland
    </author>
	<hook type="before_prepare" src="scripts/before_prepare.js" />
    <content src="index.html" />
    <plugin name="cordova-plugin-whitelist" spec="1" />
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <platform name="android">
        <allow-intent href="market:*" />
    </platform>
    <platform name="ios">
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
         <edit-config target="NSCameraUsageDescription" file="*-Info.plist" mode="merge">
            <string>Permission needed in order to scan QRCode.</string>
        </edit-config>
    </platform>
</widget>
